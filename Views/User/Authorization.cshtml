@model Attractions.Models.dtoModels.dtoAuthorizationUser
@{
    ViewData["Title"] = "Авторизация";
}
<div class="text-center">
    <h1 class="display-4">Авторизация</h1>
    <div class=" @(ViewData["Authorization_Error"] != null ? "alert alert-danger" : "collapse")">
        <strong>Ошибка</strong> @ViewData["Authorization_Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>

<form asp-controller="User" asp-action="Authorization" class="d-flex justify-content-center" style="height: 100vh;">
    <div class="form-group">
        <!-- Используем w-25 для фиксированной ширины формы -->
        <label class="control-label">Логин</label>
        <input asp-for="Login" class="form-control mb-3" />

        <label class="control-label">Пароль</label>
        <input asp-for="Password" type="password" class="form-control mb-3" />

        <input type="submit" value="Вход" class="btn btn-primary w-100" /> <!-- w-100 для ширины кнопки -->
    </div>
</form>