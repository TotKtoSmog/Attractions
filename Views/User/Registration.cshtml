@model Attractions.Models.dtoModels.dtoRegistrationUser
@{
    ViewData["Title"] = "Регистрация";
}
<div class="text-center">
    <h1 class="display-4">Авторизация</h1>
    <div class=" @(ViewData["Registration_Error"] != null ? "alert alert-danger" : "collapse")">
        <strong>Ошибка</strong> @ViewData["Registration_Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>

<form asp-controller="User" asp-action="Registration" class="d-flex justify-content-center" style="height: 100vh;">
    <div class="form-group">

        <label class="control-label">Имя</label>
        <input asp-for="FirstName" class="form-control mb-3" />

        <label class="control-label">Фамилия</label>
        <input asp-for="LastName" class="form-control mb-3" />

        <label class="control-label">Возраст</label>
        <input asp-for="Age" type="number" min="18" max="99" class="form-control mb-3" />

        <label class="control-label">Email (Логин)</label>
        <input asp-for="Email" class="form-control mb-3" />

        <label class="control-label">Пароль</label>
        <input asp-for="Password" value="" type="password" class="form-control mb-3" />

        <label class="control-label">Повторите Пароль</label>
        <input asp-for="RepeatPassword" value="" type="password" class="form-control mb-3" />

        <input type="submit" value="Зарегистрироваться" class="btn btn-primary w-100" />

    </div>
</form>